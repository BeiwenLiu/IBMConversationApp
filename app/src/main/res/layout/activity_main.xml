<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:id="@+id/test"
        android:layout_alignTop="@+id/dislike"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SST Google"
        android:id="@+id/stt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response"
        android:id="@+id/textView"
        android:layout_above="@+id/test"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:hint="Input"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:layout_below="@+id/ref"
        android:layout_alignLeft="@+id/reset"
        android:layout_alignStart="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Automate Watson"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/toggleButton"
        android:layout_toLeftOf="@+id/toggleButton"
        android:layout_alignBottom="@+id/toggleButton"
        android:gravity="center"
        android:scrollbars = "vertical"
        android:maxLines="2000"
        android:freezesText="true"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/radioGroup"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat 1"
            android:id="@+id/seat1"
            android:checked="true"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/button_4"
            android:layout_toStartOf="@+id/button_4" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat 2"
            android:id="@+id/seat2"
            android:checked="false"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/seat1"
            android:layout_toEndOf="@+id/seat1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat 3"
            android:id="@+id/seat3"
            android:checked="false"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/seat2"
            android:layout_toEndOf="@+id/seat2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat 4"
            android:id="@+id/seat4"
            android:checked="false"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/seat3"
            android:layout_toEndOf="@+id/seat3" />

    </RadioGroup>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal" android:id="@+id/scrollView2"
        android:fillViewport="false"
        android:background="@drawable/border2"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/radioGroup">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/test"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#FFFFFF"
                android:padding="7dp"
                android:freezesText="true"/>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="7dp"
                android:freezesText="true"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="7dp"
                android:freezesText="true"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="7dp"
                android:freezesText="true"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Driver"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:textSize="18sp"
            android:textColor="#ff00796b"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:text="Passenger"
            android:textSize="18sp"
            android:textColor="#ff00796b"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Back Seat1"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:textSize="18sp"
            android:textColor="#ff00796b"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Back Seat2"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:textSize="18sp"
            android:textColor="#ff00796b"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:backgroundTint="#ff0000"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ref"
        android:layout_below="@+id/stt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">>

        <LinearLayout android:layout_width="0dp" android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TTS GOOGL"
                android:id="@+id/ttsGoogle"
                android:layout_below="@+id/stt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/test"
                android:layout_toLeftOf="@+id/test" />
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="fill_parent"
            android:layout_weight="1" android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TTS IBM"
                android:id="@+id/tts"
                android:layout_alignTop="@+id/stt"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:id="@+id/like"
        android:backgroundTint="#007299"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dislike"
        android:id="@+id/dislike"
        android:backgroundTint="#007299"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/like"
        android:layout_toRightOf="@+id/like"
        android:layout_toEndOf="@+id/like" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pitch"
        android:max="20"
        android:progress="10"
        android:layout_toRightOf="@+id/like"
        android:layout_below="@+id/ref"
        android:layout_toLeftOf="@+id/test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pitch"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/pitch"
        android:layout_toLeftOf="@+id/pitch"
        android:layout_below="@+id/ref"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:layout_alignRight="@+id/pitch"
        android:layout_alignEnd="@+id/pitch"
        android:layout_below="@+id/pitch"
        android:max="20"
        android:progress="10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speed"
        android:id="@+id/textView11"
        android:layout_toLeftOf="@+id/pitch"
        android:layout_alignBottom="@+id/speed"
        android:layout_below="@+id/pitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment"
        android:textColorHint="#007299"
        android:hint="Comment (Optional)"
        android:visibility="invisible"
        android:layout_above="@+id/textView"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm"
        android:backgroundTint="#007299"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/test"
        android:layout_toRightOf="@+id/dislike"
        android:layout_toEndOf="@+id/dislike"
        android:visibility="invisible"/>


</RelativeLayout>


