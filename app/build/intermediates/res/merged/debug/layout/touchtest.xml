<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="512dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:text="Midtown Brew"
        android:textSize="32sp"
        android:padding="5px"
        android:id="@+id/textView12" />

    <TextView
        android:layout_width="512dp"
        android:layout_height="250dp"
        android:text="New Text"
        android:id="@+id/brewView"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="512dp"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:rowCount="6"
        android:columnCount="5"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/gridLayout"
        android:layout_below="@+id/brewView">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:id="@+id/coffee"
            android:layout_row="0"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coffeegroup"
            android:layout_row="0"
            android:layout_columnSpan="4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton"
                android:layout_row="0"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton2"
                android:layout_row="0"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:id="@+id/radioButton3"
                android:layout_row="0"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espresso"
            android:id="@+id/espresso"
            android:layout_row="1"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/espressogroup"
            android:layout_row="1"
            android:layout_columnSpan="4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:id="@+id/radioButton16"
                android:layout_row="1"
                android:layout_column="1"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double"
                android:id="@+id/radioButton17"
                android:layout_row="1"
                android:layout_column="2"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triple"
                android:id="@+id/radioButton18"
                android:layout_row="1"
                android:layout_column="3"
                android:checked="false" />

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latte"
            android:id="@+id/latte"
            android:layout_row="2"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lattegroup"
            android:layout_row="2"
            android:layout_columnSpan="4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton4"
                android:layout_row="2"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton5"
                android:layout_row="2"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:id="@+id/radioButton6"
                android:layout_row="2"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tea"
            android:id="@+id/tea"
            android:layout_row="3"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teagroup"
            android:layout_row="3"
            android:layout_columnSpan="4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton7"
                android:layout_row="3"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton10"
                android:layout_row="3"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:id="@+id/radioButton13"
                android:layout_row="3"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frappe"
            android:id="@+id/frappe"
            android:layout_row="4"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frappegroup"
            android:layout_row="4"
            android:layout_columnSpan="4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton8"
                android:layout_row="4"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton11"
                android:layout_row="4"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:id="@+id/radioButton14"
                android:layout_row="4"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice Tea"
            android:id="@+id/icetea"
            android:layout_row="5"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iceteagroup"
            android:layout_row="5"
            android:layout_columnSpan="4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton9"
                android:layout_row="5"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton12"
                android:layout_row="5"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:id="@+id/radioButton15"
                android:layout_row="5"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>
    </GridLayout>

    <TextView
        android:layout_width="500dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:text="Midtown Cafe"
        android:textSize="32sp"
        android:padding="5px"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="88dp"
        android:text="New Text"
        android:id="@+id/cafeView"
        android:layout_below="@+id/textView13"
        android:layout_above="@+id/grid"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/brewView" />

    <GridLayout
        android:layout_width="389dp"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:rowCount="6"
        android:columnCount="5"
        android:orientation="vertical"
        android:layout_below="@+id/brewView"
        android:layout_alignEnd="@+id/cafeView"
        android:layout_toEndOf="@+id/brewView">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburger"
            android:id="@+id/hamburger"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fries"
            android:id="@+id/fries"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice Cream"
            android:id="@+id/icecream"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soft Drink"
            android:id="@+id/softdrink"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Nuggets"
            android:id="@+id/chickennuggets"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cookies"
            android:id="@+id/cookies"
            android:layout_row="5"
            android:layout_column="0" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friesgroup"
            android:layout_row="1"
            android:layout_columnSpan="4" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single"
                android:id="@+id/radioButton22"
                android:layout_row="1"
                android:layout_column="1"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double"
                android:id="@+id/radioButton23"
                android:layout_row="1"
                android:layout_column="2"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triple"
                android:id="@+id/radioButton24"
                android:layout_row="1"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icecreamgroup"
            android:layout_row="2"
            android:layout_columnSpan="4" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanilla"
                android:id="@+id/radioButton25"
                android:layout_row="2"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chocolate"
                android:id="@+id/radioButton26"
                android:layout_row="2"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strawberry"
                android:id="@+id/radioButton27"
                android:layout_row="2"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/softdrinkgroup"
            android:layout_row="3"
            android:layout_columnSpan="4" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:id="@+id/radioButton28"
                android:layout_row="3"
                android:layout_column="1"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:id="@+id/radioButton29"
                android:layout_row="3"
                android:layout_column="2"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:id="@+id/radioButton30"
                android:layout_row="3"
                android:layout_column="3"
                android:checked="false" />
        </RadioGroup>

    </GridLayout>

</RelativeLayout>